<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/links/chat/{{id}}" class="btn btn-success m-2">Open chat</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary m-2">Edit</a>
                        <a href="/links/delete/{{id}}" class="btn btn-danger m-2">Delete link</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There are no links saved yet</p>
                    <a href="/links/add">Create One!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>